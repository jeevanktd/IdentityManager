@model IdentityManager.Data.LoginViewModel
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signInManager;

<h1 class="test-info">Log In</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-controller="Account" asp-route-returnurl=@ViewData["ReturnUrl"] asp-action="Login" method="post" role="form">

            <h1>Use a local account to log in</h1>

            <br />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group">
                <label asp-for="Password" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    <div class="custom-checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m=>m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success form-control">LogIn</button>
                </div>
            </div>

            <p>
                <a asp-action="Register">Want to Register a New User?</a>
            </p>
            <p>
                <a asp-action="ForgotPassword">Forgot your password?</a>
            </p>


        </form>
    </div>

    @{
        var schemes = await signInManager.GetExternalAuthenticationSchemesAsync();
        var loginProviders = schemes.ToList();
    }

    @if (loginProviders.Count() > 0)
    {
        <div class="col-md-4">
            <section>
                <h4> Use another service to Login</h4>

                <form asp-controller="Account" asp-action="ExternalLogin"
                asp-route-returnUrl=@ViewData["ReturnUrl"]
                method="post" role="form">
                
                <p>
                    @foreach(var provider in loginProviders)
                        {
                            <button type="submit" class="btn btn-primary"
                            name="provider" value="@provider.Name"
                            title="Login using your @provider.Name account">
                            
                            @provider.Name
                             </button>
                        }
                    </p>
            
            
                    </form>



            </section>
            
        </div>
    }
</div>



@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}